<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_rounded_shape">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="102dp"
        android:layout_above="@id/input_group"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/calibri"
            android:text="Please update your personal details."
            android:textColor="@color/blue"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_group"
        android:layout_width="354dp"
        android:layout_height="531dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/calibri"
            android:text="Business Name"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/aboutMe_BusinessTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_top"
            android:inputType="text"
            android:padding="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/calibri"
            android:text="Mobile Number"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/aboutMe_MobileTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:inputType="phone"
            android:maxLength="10"
            android:padding="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/calibri"
            android:text="Website Link"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/aboutMe_websiteTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:inputType="text"
            android:padding="15dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/calibri"
            android:text="Introduction"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/aboutMe_IntroTxt"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edit_text_middle"
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <Button
            android:id="@+id/aboutMe_SubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="17sp" />

    </LinearLayout>
</RelativeLayout>