<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/scheduleToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        </com.google.android.material.appbar.AppBarLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Schedule Date "
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:background="#f1f1f1"
                        />


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <Button
                                android:padding="5dp"
                                android:background="@drawable/categoty_card_edges"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button1"
                                android:tag="0"
                                />
                            <Button
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button2"
                                android:tag="1"/>

                            <Button
                                android:tag="3"
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button3" />
                            <Button
                                android:tag="4"
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button4" />
                            <Button
                                android:tag="5"
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button5" />
                            <Button
                                android:tag="6"
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button6" />
                            <Button
                                android:tag="7"
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button7" />
                            <Button
                                android:tag="8"
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button8" />
                            <Button
                                android:tag="9"
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button9" />
                            <Button
                                android:tag="10"
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button10" />
                            <Button
                                android:tag="11"
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button11" />

                            <Button
                                android:tag="12"
                                android:background="@drawable/categoty_card_edges"
                                android:padding="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date 1"
                                android:id="@+id/button12" />
                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Normal Slots"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:background="#f1f1f1"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >

                        <Button

                            android:layout_margin="10dp"
                            android:id="@+id/one"
                            android:background="@drawable/time_button_background"
                            android:text="10:00 AM - 10:30 AM"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <Button
                            android:id="@+id/two"
                            android:layout_margin="10dp"

                            android:text="11:00 AM - 11:30 AM"
                            android:background="@drawable/time_button_background"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >


                        <Button
                            android:id="@+id/three"
                            android:text="01:00 PM - 01:30 PM"
                            android:background="@drawable/time_button_background"
                            android:layout_weight="1"
                            android:layout_margin="10dp"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <Button
                            android:id="@+id/four"
                            android:layout_margin="10dp"

                            android:text="02:00 PM - 02:30 PM"
                            android:background="@drawable/time_button_background"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >


                        <Button
                            android:id="@+id/five"
                            android:layout_margin="10dp"

                            android:text="03:00 PM - 03:30 PM"
                            android:background="@drawable/time_button_background"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                        <Button
                            android:id="@+id/six"
                            android:layout_margin="10dp"

                            android:text="04:00 PM - 04:30 PM"
                            android:background="@drawable/time_button_background"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        >


                        <Button
                            android:id="@+id/seven"
                            android:background="@drawable/time_button_background"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_margin="10dp"

                            android:text="05:00 PM - 05:30 PM"
                            android:layout_height="wrap_content"/>


                        <Button
                            android:id="@+id/eight"
                            android:text="06:00 PM - 06:30 Pm"
                            android:layout_weight="1"
                            android:layout_margin="10dp"

                            android:background="@drawable/time_button_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note: Beautician will work till 8 pm due to safety reasons. Remaining service will carried out next day/time."
                    android:textSize="8dp"
                    android:padding="1dp"
                    android:foregroundGravity="center"
                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:weightSum="2"
                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>


                <LinearLayout
                    android:background="@drawable/bottom_drawable"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/proceed"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Proceed "
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="14dp"

                        />

                </LinearLayout>

            </LinearLayout>



        </FrameLayout>



    </LinearLayout>

</RelativeLayout>