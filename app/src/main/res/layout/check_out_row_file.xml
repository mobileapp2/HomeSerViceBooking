<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="2.5dp"
    android:paddingBottom="2.5dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginBottom="5dp" >

        <!-- ListRow Left sied Thumbnail image -->

        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="7dip"
            android:padding="2dip" >

            <ImageView
                android:id="@+id/checkOutchildImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/bag" />
        </LinearLayout>

        <!-- Title Of Song -->



        <TextView
            android:textStyle="bold"
            android:id="@+id/checkOutchildCatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Pineapple"
            android:textColor="@color/colorPrimary"
            android:textSize="15dip"
            android:typeface="sans" />

        <LinearLayout
            android:id="@+id/cart_plus_minus_layout"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkOutchildCatName"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chckOutChildcatPrice"
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginLeft="60dip"
                android:layout_weight="0.23"
                android:paddingRight="20dip"
                android:text="Rs. 200"
                android:gravity="center"
                android:textColor="#1d1d1d"
                android:textSize="12dip"
                android:textStyle="bold" />

            <!-- <TextView
                 android:id="@+id/product_cart_quantity"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal|center_vertical"
                 android:paddingRight="25dip"
                 android:text="quantiy"
                 android:textColor="#343434"
                 android:textSize="12dip" />-->

            <ImageView
                android:id="@+id/checkOutchildCatDecrement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus_svg" />

            <TextView
                android:id="@+id/checkOutchildCatQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="10"
                android:textSize="12dip"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/checkOutchildCatIncrement"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_plus_svg" />


            <ImageView
                android:id="@+id/childCatDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete__svg_24px" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>