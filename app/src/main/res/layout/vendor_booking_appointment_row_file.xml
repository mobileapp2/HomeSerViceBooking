<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_background_home"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:padding="5dp"
                    android:id="@+id/bookingDate"
                    android:textSize="14sp"
                    android:textColor="@color/dark_black"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date : "
                    />

                <TextView
                    android:textColor="@color/dark_black"

                    android:padding="5dp"
                    android:id="@+id/bookingid"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Booking ID : "
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dotted"
                android:layerType="software" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:textColor="@color/dark_black"
                    android:id="@+id/serviceNameTv"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Service : "
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/fragment_title_padding_10"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:textColor="@color/dark_black"

                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Address : "
                    android:textSize="14sp"
                    android:layout_marginTop="@dimen/fragment_title_padding_10"

                    />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/bookingAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fragment_title_padding_10"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:textColor="@color/dark_black"

                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:layout_marginTop="@dimen/fragment_title_padding_10"
                    android:textStyle="bold"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arrival Time :  "

                    />
                <TextView
                    android:layout_marginTop="@dimen/fragment_title_padding_10"

                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/bookingTime"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/fragment_title_padding_10"
                    android:textColor="@color/dark_black"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Qty : "
                    />
                <TextView
                    android:id="@+id/appointmentQty"
                    android:layout_marginTop="@dimen/fragment_title_padding_10"
                    android:textColor="@color/dark_black"

                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/fragment_title_padding_10"
                    android:textColor="@color/dark_black"

                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount : "
                    />


                <TextView
                    android:id="@+id/appointmentAmount"
                    android:layout_marginTop="@dimen/fragment_title_padding_10"
                    android:textColor="@color/dark_black"

                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView

                    android:layout_weight="1"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_black"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment Mode : "
                    android:layout_marginTop="@dimen/fragment_title_padding_10"

                    />


                <TextView
                    android:layout_marginTop="@dimen/fragment_title_padding_10"
                    android:layout_weight="1"
                    android:id="@+id/bookingmode"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_black"

                    />


            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <TextView

                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/dark_black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer Name : "
                android:layout_marginTop="@dimen/fragment_title_padding_10"

                />


            <TextView
                android:layout_marginTop="@dimen/fragment_title_padding_10"
                android:layout_weight="1"
                android:id="@+id/bookingCustomerName"
                android:padding="3dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_black"

                />


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView

                    android:layout_weight="1"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_black"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact : "
                    android:layout_marginTop="@dimen/fragment_title_padding_10"

                    />


                <TextView
                    android:layout_marginTop="@dimen/fragment_title_padding_10"
                    android:layout_weight="1"
                    android:id="@+id/bookingContact"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_black" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                >

                <TextView

                    android:layout_weight="1"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/dark_black"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    android:layout_marginTop="@dimen/fragment_title_padding_10"

                    />


                <TextView
                    android:layout_marginTop="@dimen/fragment_title_padding_10"
                    android:layout_weight="1"
                    android:id="@+id/bookingStatus"
                    android:padding="3dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_black" />


            </LinearLayout>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dotted"
                android:layerType="software" />
            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_marginTop="@dimen/fragment_title_padding_10"

                 android:weightSum="2"
                 >

                 <TextView
                     android:id="@+id/shareLocationTextView"
                     android:layout_weight="1"
                     android:padding="3dp"
                     android:textSize="@dimen/margin_16"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/colorPrimary"
                     android:gravity="center"
                     android:text="Share Location"

                     />

                 <View
                     android:layout_width="1dp"
                     android:layout_height="fill_parent"
                     android:background="#000" />

                 <TextView

                     android:id="@+id/orderStatusTextView"
                     android:layout_weight="1"
                     android:padding="3dp"
                     android:textSize="@dimen/margin_16"
                     android:textColor="@color/colorPrimary"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Order Status"
                     android:gravity="center"
                     />


             </LinearLayout>-->
            <LinearLayout
                android:id="@+id/vendorBooking_basicfaetures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/fragment_title_padding_10"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/vendorBook_cancel"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:textSize="@dimen/margin_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Cancel"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#000" />

                <TextView
                    android:id="@+id/vendorBook_accept"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:textSize="@dimen/margin_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Accept"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#000" />

            </LinearLayout>
            <ImageView
                android:id="@+id/vendorBooking_ImageView"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:src="@drawable/dotted"
                android:layerType="software" />
            <LinearLayout
                android:id="@+id/vendorBook_addtionalfeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/fragment_title_padding_10"
                android:weightSum="2"
                >
                <TextView
                    android:id="@+id/vendorBook_completed"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:textSize="@dimen/margin_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Completed"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#000" />

                <TextView
                    android:id="@+id/vendorBook_map"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:textSize="@dimen/margin_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:text="Map"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#000" />

            </LinearLayout>





        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>