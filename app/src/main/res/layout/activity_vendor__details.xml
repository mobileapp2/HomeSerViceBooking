<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_rounded_solid">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_above="@id/input_group">
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/calibri"
            android:text="Submit Your Details"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:id="@+id/txtSubmit"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@fonts/calibri"
            android:text="For Verification"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:id="@+id/txtVerification"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/input_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_top"
            android:hint="Company Name"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:id="@+id/txtCompanyName"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="First Name"
            android:inputType="text"
            android:padding="15dp"
            android:id="@+id/txtFirstName"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="Last Name"
            android:inputType="text"
            android:padding="15dp"
            android:id="@+id/txtLastName"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="GST Number"
            android:inputType="text"
            android:padding="15dp"
            android:id="@+id/txtGstNumber"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="Aadhar Card Number"
            android:inputType="text"
            android:padding="15dp"
            android:id="@+id/txtAdharCard"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="Pan Card Number"
            android:inputType="text"
            android:padding="15dp"
            android:id="@+id/txtpanCardNo"/>
        <EditText
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="Address"
            android:inputType="text"
            android:padding="15dp"
            android:id="@+id/txtAddress"/>
        <EditText

            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_middle"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="15dp"
            android:id="@+id/txtMobileNo"/>
        <Spinner
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_bottom"
            android:padding="15dp"
            android:id="@+id/cmbCountry"
            android:entries="@array/country_arrays"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Save Record"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="17sp"/>

    </LinearLayout>
</RelativeLayout>